<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shelf Life</title>
    {{!-- Google Fonts --}}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Recursive:wght@300;400&family=Red+Hat+Display:ital,wght@0,400;0,500;0,700;1,400;1,500&display=swap" rel="stylesheet">
    {{!-- CSS --}}
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/style.css">
    {{!-- Favicon --}}
    <link rel="icon" href="/assets/favicon.ico" type="image/x-icon">
</head>

<body>
    <main>
        <section class="leftAside">
            <div class="brandTitle">
                <a href="/">
                    <h1 class="shelf">SHELF</h1>
                    <h1>LIFE</h1>
                </a>
            </div>
            {{#if logged_in}}
            <div class="pageNav">
                <a href="/pantry">
                    <h2>Your Pantry</h2>
                </a>
            </div>
            <div class="pageNav">
                <a href="/addItems">
                    <h2>Add Items</h2>
                </a>
            </div>
            <button id="logoutBtn">Logout</button>
            <script src="/js/logout.js"></script>
            {{else}}
            <div class="asideForm">
                <form class="loginForm">
                    <div class="form-group">
                        <input class="formInput" type="text" id="emailLogin" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <input class="formInput" type="password" id="passwordLogin" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <button class="formBtn" type="submit" id="loginBtn">Login!</button>
                    </div>
                </form>
            </div>
            <div class="asideForm">
                <form class="signupForm">
                    <div class="form-group">
                        <input class="formInput" type="text" id="nameSignup" placeholder="Your Name">
                    </div>
                    <div class="form-group">
                        <input class="formInput" type="text" id="emailSignup" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <input class="formInput" type="password" id="passwordSignup" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <button class="formBtn" type="submit" id="signupBtn">Create Account!</button>
                    </div>
                </form>
            </div>
            <script src="/js/login.js"></script>
            <script src="/js/signup.js"></script>
            {{/if}}
        </section>
        <section class="sectionContent">
            {{{ body }}}
        </section>
    </main>
</body>
</html>